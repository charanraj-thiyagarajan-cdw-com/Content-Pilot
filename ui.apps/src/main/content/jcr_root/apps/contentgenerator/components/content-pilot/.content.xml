<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:mixinTypes="[]"
        jcr:primaryType="nt:unstructured"
        jcr:title="Content Pilot"
        sling:resourceType="granite/ui/components/shell/page"
        consoleId="content-pilot">
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                categories="[granite.ui.coral.foundation,content-pilot.base]"/>
        </head>
        <title
            jcr:primaryType="nt:unstructured"
            jcr:title="Content Pilot"
            sling:resourceType="granite/ui/components/shell/title"/>
        <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container"
            margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    margin="{Boolean}true">
                    <items jcr:primaryType="nt:unstructured">
                        <jsonTab
                            jcr:primaryType="nt:unstructured"
                            jcr:title="JSON"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <heading
                                    granite:class="coral-Heading coral-Heading--2"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                    level="{Long}2"
                                    text="Fetch Component JSON"/>
                                <well
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/well"
                                    margin="{Boolean}true">
                                    <items jcr:primaryType="nt:unstructured">
                                        <container
                                            granite:id="coreCompDialogForm"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form"
                                            foundationForm="{Boolean}true"
                                            loadingMask="{Boolean}true"
                                            margin="{Boolean}true"
                                            maximized="{Boolean}true"
                                            style="vertical"
                                            action="/bin/core-comp-dialog"
                                            method="get">
                                            <items jcr:primaryType="nt:unstructured">
                                                <componentPath
                                                    granite:id="componentPath"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Component Path"
                                                    name="componentPath"
                                                    required="{Boolean}true"
                                                    emptyText="Enter text here"/>
                                                <submitButton
                                                    granite:id="btnSubmit1"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/button"
                                                    text="Fetch component key/value pairs"
                                                    type="submit"/>
                                            </items>
                                        </container>
                                        <container2
                                            granite:id="adkForm"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form"
                                            foundationForm="{Boolean}true"
                                            loadingMask="{Boolean}true"
                                            margin="{Boolean}true"
                                            maximized="{Boolean}true"
                                            style="vertical"
                                            action="/bin/adk"
                                            method="post">
                                            <items jcr:primaryType="nt:unstructured">
                                                <dialogResponse
                                                    granite:id="dialogResponseField"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Component Key/value Pairs"
                                                    name="dialogResponse"
                                                    emptyText="Servlet response will appear here"/>
                                                <externalURL
                                                    granite:id="externalURL"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="External Non-AEM page URL"
                                                    name="externalURL"
                                                    required="{Boolean}true"
                                                    emptyText="Enter text here"/>
                                                <submitButton
                                                    granite:id="btnSubmit2"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/button"
                                                    text="Fetch component data from Non-AEM page"
                                                    type="submit"/>
                                            </items>
                                        </container2>
                                    </items>
                                </well>
                            </items>
                        </jsonTab>
                        <componentTab
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Component"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <heading
                                    granite:class="coral-Heading coral-Heading--2"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                    level="{Long}2"
                                    text="Create component"/>
                                <well
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/well"
                                    margin="{Boolean}true">
                                    <items jcr:primaryType="nt:unstructured">
                                        <container
                                            granite:id="componentCreateForm"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form"
                                            foundationForm="{Boolean}true"
                                            loadingMask="{Boolean}true"
                                            margin="{Boolean}true"
                                            maximized="{Boolean}true"
                                            style="vertical"
                                            action="/bin/adk"
                                            method="post">
                                            <items jcr:primaryType="nt:unstructured">
                                                <jsonResponse
                                                    granite:id="jsonResponse"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Identified Component JSON"
                                                    name="identifiedJSON"
                                                    emptyText="Servlet response will appear here"/>
                                                <submitButton
                                                    granite:id="btnSubmit3"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/button"
                                                    text="Send to /bin/adk"
                                                    type="submit"/>
                                                <createResponse
                                                    granite:id="createResponseField"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Component Creation Response"
                                                    name="createResponse"
                                                    emptyText="Servlet response will appear here"
                                                    disabled="{Boolean}true"/>
                                            </items>
                                        </container>
                                    </items>
                                </well>
                            </items>
                        </componentTab>
                    </items>
                </tabs>
            </items>
        </content>
    </jcr:content>
</jcr:root>
